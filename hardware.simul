# Generic modules to activate from Simulator
UsbPort = UsbPort
kbd = Keyboard("123456789*0#",4,3,0)
lcd = LCD

# --------------------------------------
# KeyBoard Reader
# --------------------------------------
1 -> kbd.oe
kbd.K[0-3] -> UsbPort.I[1-4]
kbd.kVal -> UsbPort.I0
UsbPort.O7 -> kbd.kAck

# --------------------------------------
# LCD
# --------------------------------------
UsbPort.O[0-3] -> lcd.D[4-7]
UsbPort.O4 -> lcd.rs
UsbPort.O5 -> lcd.e